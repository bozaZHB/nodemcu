<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp" />
            <solid android:color="#ba4157"/>
            <stroke
                android:width="2dip"
                android:color="#ae0320" />
            <padding
                android:bottom="14dp"
                android:left="14dp"
                android:right="14dp"
                android:top="14dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp" />
            <solid android:color="#a73a43"/>
            <stroke
                android:width="2dip"
                android:color="#ae0317"/>
            <padding
                android:bottom="14dp"
                android:left="14dp"
                android:right="14dp"
                android:top="14dp" />
        </shape>
    </item>
</selector>
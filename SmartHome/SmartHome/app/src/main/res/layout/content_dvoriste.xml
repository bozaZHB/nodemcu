            android:layout_marginRight="20dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">
            <TextView
                android:id="@+id/txtHederPraliceVreme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/plavaSlova"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/velicina_slova_dvoriste"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/prsklaliceVremeHeder" />
            <TextView
                android:id="@+id/txtprsklaliceVreme1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="@color/plavaSlova"
                android:textStyle="italic"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/velicina_slova_dvoriste"
                android:text="@string/prsklaliceVreme1" />
            <TextView
                android:id="@+id/txtprsklaliceVreme2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="@color/plavaSlova"
                android:textStyle="italic"
                android:fontFamily="sans-serif-condensed"

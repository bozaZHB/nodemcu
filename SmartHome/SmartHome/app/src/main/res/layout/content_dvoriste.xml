<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/svetlozelena">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:layout_marginTop="?attr/actionBarSize"
    android:weightSum="1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="top"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@drawable/blue_circles"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="@string/spoljna_temperatura"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="17sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <TextView
            android:id="@+id/txtSpoljnaTemperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12Â°C"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="48sp"
            android:textStyle="bold" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vlaznost"
                android:padding="5dp"
                android:textSize="15sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtVlaznostSpoljna"
                android:text="55%"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="5dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <ImageButton
                android:id="@+id/imageButtonFontanaPrskalica"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/btn_circle_on"
                android:padding="13dp"
                android:scaleType="fitCenter"
                android:src="@drawable/park" />
            <TextView
                android:id="@+id/txtFontanaPrskalica"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/plavaSlova"
                android:textSize="@dimen/velicina_slova_dvoriste"
                android:text="@string/fontana_prskalica" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="5dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <ImageButton
                android:id="@+id/imageButtonFontanaSvetlo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/btn_circle_on"
                android:padding="13dp"
                android:scaleType="fitCenter"
                android:src="@drawable/steker" />


            <TextView
                android:id="@+id/txtFontanaOsvetljenje"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/plavaSlova"
                android:textSize="@dimen/velicina_slova_dvoriste"
                android:text="@string/steker" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="5dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <ImageButton
